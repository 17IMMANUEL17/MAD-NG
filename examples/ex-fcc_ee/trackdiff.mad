local mtable, option, env in MAD

local cols = {'turn','x','px','y','py','t','pt','s','dx','dpx','dpt'};

local pfile = env.arg[1] or "FCCee_track_p.tfs"
local nfile = env.arg[2] or "FCCee_track_n.tfs"

local ptrk = mtable:read(pfile)
local ntrk = mtable:read(nfile)

print ("ncol=", #ptrk, #ntrk)
assert(#ptrk == #ntrk)

-- add PTC - NG columns to track tables
ntrk:addcol("dx" , \i -> assert(ptrk.TURN[i] == ntrk.turn[i] and ptrk. X[i]-ntrk. x[i]) )
ntrk:addcol("dpx", \i -> assert(ptrk.TURN[i] == ntrk.turn[i] and ptrk.PX[i]-ntrk.px[i]) )
ntrk:addcol("dpt", \i -> assert(ptrk.TURN[i] == ntrk.turn[i] and ptrk.PT[i]-ntrk.pt[i]) )

option.numfmt = "% -.16e"
ntrk:write("FCCee_track_p-n.tfs",cols)
