option, -info, -rbarc ;

beam ; ! positron 1Gev

! SEQUENCE WITH DRIFTS
seq: sequence, l=10, refer=entry ;
d1: drift, at=0, l=5 ;
d2: drift, at=5, l=5 ;
endsequence ;

! PTC TRACK
use, sequence=seq ;
ptc_create_universe;
ptc_create_layout, model=2, method=2, nst=1, time=true, exact=true;
ptc_start, x=4e-6, px=1e-7, y=3e-6, py=2e-7, t=2e-7, pt=1e-7;
ptc_observe, place=#s ;
ptc_observe, place=d1 ;
ptc_observe, place=d2 ;
ptc_observe, place=#e ;
ptc_track, icase=56, closed_orbit=false, dump, onetable, element_by_element, file="trackDRIFTptc." ;
ptc_track_end;
ptc_end;

! MADX TRACK
use, sequence=seq ;
track, onepass, onetable, dump, file="trackDRIFTmadx." ;
start, x=4e-6, px=1e-7, y=3e-6, py=2e-7, t=2e-7, pt=1e-7;
observe, place=#s ;
observe, place=d1 ;
observe, place=d2 ;
observe, place=#e ;
run, turns=1 ;
endtrack ;
