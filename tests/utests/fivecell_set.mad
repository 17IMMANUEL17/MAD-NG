MADX:open_env()

-- change RBEND to SBEND to allow angle ~= 0

-- change angle
if option.rbarc == true then
  local toarc = \e => if e.kind == 'rbend' then rbarc(e) end end
  fivecell:foreach(toarc)
end

-- change pole face
local eface = \s -> s.angle/2

mb :set_parent(sbend) :set{ e1=eface, e2=eface }

MADX:close_env()

