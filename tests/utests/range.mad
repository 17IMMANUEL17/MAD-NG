	r = range(0.5,0,-0.1)	for i,v in irange(0.5,0,-0.1) do assertEquals(r[i], v) end
	r = range(10,-1,-0.7)	for i,v in irange(10,-1,-0.7) do assertEquals(r[i], v) end

