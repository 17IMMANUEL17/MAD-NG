	local res =   range(10,-1,-0.7)
	local ref = {10 , 9.3, 8.6, 7.9, 7.2, 6.5, 5.8, 5.1,
						   4.4, 3.7, 3  , 2.3, 1.6, 0.9, 0.2, -0.5 }
