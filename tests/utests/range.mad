	assertEquals( (0..9..-1)       :size(), 0 )
	assertEquals( (0..-9)          :size(), 0 )
	assertEquals( (0..-9..0)       :size(), 0 )
	assertEquals( (0..-9..0.1)     :size(), 0 )
  assertEquals( nrange(2,10,inf) :size(), 0 )
	assertEquals( nrange(1,10,-inf):size(), 0 )
