function TestTwiss:setUp ()
  filesys.mkdir(rundir())
  self.optfmt = option.format
  self.nochrg = option.nocharge
  option.format = "%-.10g"
  option.nocharge = true
end

function TestTwiss:tearDown ()
  option.format   = self.optfmt
  option.nocharge = self.nochrg
end

