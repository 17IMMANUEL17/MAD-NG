    },
  }
end

-- Example #71 from Hock-Schittkowsky test suite (IPOPT)

local function testMatchFunc4 (x, mth, smth)
  local fmin = 17.014016822208
  local fn =\ x[1]*x[4] * (x[1]+x[2]+x[3]) + x[3]

  return match {
    command := printf("x1=%.6e, x2=%.6e, x3=%.6e, x4=%.6e\n", x[1],x[2],x[3],x[4]),
    variables = {
      { var = 'x[1]' },
      { var = 'x[2]' },
      { var = 'x[3]' },
      { var = 'x[4]' },
      min=0, max=6,
    },
    equalities = {
      { expr := fn() - fmin },
      { expr := x[1]^2+x[2]^2+x[3]^2+x[4]^2 - 40 },
    },
    inequalities = {
      { expr := 25 - x[1]*x[2]*x[3]*x[4] },
      { expr := 0.9999999999999999 - x[1] },
      { expr := 1 - x[2] },
      { expr := 1 - x[3] },
      { expr := 1 - x[4] },
      { expr := x[1] - 2 },
      { expr := x[2] - 5.0000000000000001 },
      { expr := x[3] - 5.0000000000000001 },
      { expr := x[4] - 2 },
    },
    objective = {
!      exec := x[1]*x[4] * (x[1]+x[2]+x[3]) + x[3] - fmin,
      method=mth, fmin=1e-12, maxcall=500, grad=false, bisec=3, summary=2, debug=2,
      submethod=smth,
    },
  }
end

