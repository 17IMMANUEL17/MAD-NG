-- Function matching ----------------------------------------------------------o

-- Example from NLOpt tutorial

local function testFuncFn (x, grd)
  if grd then
    grd[1] = 0.0
    grd[2] = 0.5 / sqrt(x[2])
  end
  return sqrt(x[2])
end

local function testFuncLe (x, r, jac)
  local a, b = 2, 0
  if jac then
    jac[1] = 3*a*(a*x[1]+b)^2
    jac[2] = -1
  end
  r[1] = (a*x[1]+b)^3 - x[2]

  local a, b = -1, 1
  if jac then
    jac[3] = 3*a*(a*x[1]+b)^2
    jac[4] = -1
  end
  r[2] = (a*x[1]+b)^3 - x[2]
end

local function testMatchFunc1 (x, mth)
  return match {
    variables = {
      { var = 'x[1]', min = -inf },
      { var = 'x[2]', min =  0   },
      rtol = 1e-4,        -- relative tolerance for all variables (from example)
    },
    inequalities = {
      exec = testFuncLe, nequ = 2, tol = 1e-8
    },
    objective = {
      method=mth, maxcall=100, !summary=2, !debug=2,
      exec = testFuncFn,
    },
  }
end

local function testMatchFunc2 (x, mth)
  return match {
    variables = {
      { var = 'x[1]', min = -inf },
      { var = 'x[2]', min =  0   },
    },
    inequalities = {
      exec = testFuncLe, nequ = 2, tol = 1e-8
    },
    objective = {
      method=mth, maxcall=100, fmin=sqrt(8/27)+1e-3, !summary=2, !debug=2,
      exec = testFuncFn,
    },
  }
end

