local vector, tpsa, ctpsa, gtpsad                                in MAD
local eps, abs, pi                                               in MAD.constant
local abs                                                        in MAD.gmath
local ident                                                      in MAD.gfunc
local assertTrue, assertEquals, assertAlmostEquals               in MAD.utest
local is_tpsa, is_ctpsa, is_gtpsad                                         in MAD.typeid

-- locals ---------------------------------------------------------------------o

local dat = assert(loadfile('data/tpsa.dat'))()

local ord = {1,2,3,4,5,6,7,10,12,15}

-- regression test suites -----------------------------------------------------o

TestTPSAOps = {}


TestIs = {}
TestIsEqual    = {}
TestLogicEqual = {}

function TestIs:testBasics()
    local ord  = 15
    local nv = 2
    local d = gtpsad(nv, ord)
    local t = tpsa(d)
    local ct = ctpsa(d)
    assertEquals(t.mo,ord)
    assertEquals(ct.mo,ord)
    assertTrue(is_tpsa(t))
    assertTrue(is_ctpsa(ct))
    assertTrue(is_gtpsad(d))
    
    --check all order zeros
    for o = 1, ord do
      assertEquals(0,t.coef[o])
      assertEquals(0 + 0i,ct.coef[o])
    end
end


function TestIsEqual:testBasics()
    local ord  = 15
    local nv = 2
    local d = gtpsad(nv, ord)
    local t = tpsa(d)
    local ct = ctpsa(d)
    assertEquals(0,t)
    assertEquals(t,0)
    assertEquals(ct,0)
    assertEquals(0,ct)
end
