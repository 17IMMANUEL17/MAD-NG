local function testSOL ()
  local cfg = ref_cfg "sol" {
    elm =  [[
      SOLENOID, at=0.75, l=1.5, ks=${ks}, fringe=0; 
    ]],

    converge_to = \s => 
      local conv_cfg = tblcpy(s.cur_cfg)
      conv_cfg.model = 2; conv_cfg.method = 2; conv_cfg.nslice = 1;
      return conv_cfg
    end,
    
    tol = 1e3,
    order  = 3,
    model  = {1},
    energy = {1},
    -- dorun = false,

    alist  = tblcat(ref_cfg.alist, {"ks"}), 
    ks     = {-0.6, -0.3, 0.3, 0.6 },
    ksi    = \s -> s.cur_cfg.ks*1.5,
    plot_info = \s -> {
      x_axis_attr = "math.abs(${ks})/${nslice}",
      title       = "Solenoid " .. models[s.model[1]] .." to TKT method 2, nslice=1",
      xlabel      = "ks/No. Slices",
      plotcfg     = "set logscale x;",
      filename    = "sol-".. models[s.model[1]] .."-comparison-allks.png",
    }
  }
  run_test(cfg)
end

