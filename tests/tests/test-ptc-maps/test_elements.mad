local function testDRIFT()
    local cfg = ref_cfg "drift" { 
      elm = "DRIFT, at=0.75, l=1.5",
      tol = 1000,
    }
    run_test(cfg)
end

local function testCAV()
    elm =  "RFCAVITY, at=0.75, l=1.5, volt=${volt}, lag=${lag}, harmon=${harmon}, freq=${freq}, no_cavity_totalpath=${no_totalpath};"
    local cfg = ref_cfg "cavity" {
      alist = tblcat(ref_cfg.alist, {"no_totalpath", "volt", "lag", "freq", "harmon"}),
        no_totalpath = {true, false},
        volt      = -8 ..8  ..8   ,
        lag       =  0 ..0.9..0.45,
        freq      =  0 ..150 ..75,
        icase     =  6,
    }
    cfg = cfg {harmon := {cfg.cfg.freq == 0 and 2 or 0},}
    run_test(cfg)
end

local function testCCAV()
    elm =  "CRABCAVITY, at=0.75, l=1.5, volt=${volt}, lag=${lag}, harmon=${harmon}, freq=${freq};"
    local cfg = ref_cfg "cavity" {
        alist = tblcat(ref_cfg.alist, {"volt", "lag", "freq", "harmon"}),
        -- no_totalpath = {true, false}, !Illegal in MAD-X
        volt      = -8 ..8  ..8   ,
        lag       =  0 ..0.9..0.45,
        freq      =  0 ..150 ..75,
        icase     =  6,
    }
    cfg = cfg {harmon := {cfg.cfg.freq == 0 and 2 or 0},}
    run_test(cfg)
end

local function testMULT()
    elm =  "MULTIPOLE, at=0.75, lrad=1.5, knl={${k0}, ${k1}, ${k2}, ${k3}}, ksl={${k0s}, ${k1s}, ${k2s}, ${k3s}};"
    local cfg = ref_cfg "multipole" {
        alist = tblcat(ref_cfg.alist, {"k0", "k1", "k2", "k3", "k0s", "k1s", "k2s", "k3s"}),
        k0        = -0.2..0.2..0.2,
        k1        = -0.2..0.2..0.2,
        k2        = -0.2..0.2..0.2,
        k3        = -0.2..0.2..0.2,
        k0s       = -0.2..0.2..0.2,
        k1s       = -0.2..0.2..0.2,
        k2s       = -0.2..0.2..0.2,
        k3s       = -0.2..0.2..0.2,
    }
    run_test(cfg)
end

local function testSBEND()
    elm =  "SBEND, at=0.75, l=1.5, angle=${k0}*2*pi/1e2, kill_ent_fringe=${no_fringe}, kill_exi_fringe=${no_fringe};"
    local cfg = ref_cfg "sbend" {
        alist = tblcat(ref_cfg.alist, {"k0", "no_fringe"}), 
        k0        = -0.5..0.5..0.2,
        no_fringe = {true, false},
    }
    run_test(cfg)
end

local function testRBEND()
    elm =  "RBEND, at=0.75, l=1.5, angle=${k0}*2*pi/1e2, kill_ent_fringe=${no_fringe}, kill_exi_fringe=${no_fringe}, ptcrbend=true, truerbend=true;"
    local cfg = ref_cfg "rbend"{
        alist = tblcat(ref_cfg.alist, {"k0", "no_fringe"}),
        k0        = -0.5..0.5..0.2,
        no_fringe = {--[[ true, ]] false}, ! Impossible to turn off fringe in MAD-X
    }
    run_test(cfg)
end

local function testSOL() ! Only TKT while MAD-NG does not support 0 length solenoids 
    elm =  "SOLENOID, at=0.75, l=${l}, ks=${ks}, fringe=${fringe};"
    local cfg = ref_cfg "solenoid" {
        alist = tblcat(ref_cfg.alist, {"l", "ks", --[[ "ksi", ]] "fringe"}),
        l        = {1.5},
        ks       = -0.6..0.6..0.3,
        -- ksi      = {\cfg-> ((cfg.model==1) and (cfg.method < 4) and (cfg.nslice == 1) and cfg.ks*1.5 or 0)}, 
        fringe   = 0..1,
        model    = {2},
    }
    run_test(cfg)
end

local function testELSEP()
    elm =  "ELSEPARATOR, at=0.75, l=1.5, ex=${ex}, ey=${ey}, ex_l=${ex_l}, ey_l=${ey_l}, tilt=${tilt};" 
    local cfg = ref_cfg "elseparator" {
        alist = tblcat(ref_cfg.alist, {"ex", "ey", "ex_l", "ey_l", "tilt"}),
        ex       = -4..4..4,
        ey       = -4..4..4,
        ex_l     = {0}, !-6..6..6,   ! Broken as the madx is ex_l and the madng is exl
        ey_l     = {0}, !-6..6..6,   ! Broken as the madx is ex_l and the madng is exl
        tilt     = {0}, !1..4, ! MAD-X does not tell PTC about tilt
    }
    run_test(cfg)
end

local function testKICK()
    elm =  "KICKER, at=0.75, l=1.5, hkick=${hkick}, vkick=${vkick}, tilt=${tilt}*pi/16;"
    local cfg = ref_cfg "kicker" {
        alist = tblcat(ref_cfg.alist, {"hkick", "vkick", "tilt"}), 
        hkick    = -2e-3..2e-3..2e-3,
        vkick    = -2e-3..2e-3..2e-3,
        tilt     = 1..4,
    }
    run_test(cfg)
end

local function testRFMULT()
    elm =  [[
        RFMULTIPOLE, at=0.75, lrad=1.5, volt=${volt}, lag=${lag}, harmon=${harmon}, freq=${freq},
        pnl={${k0}, ${k1}, ${k2}, ${k3}}, psl={${k0s}, ${k1s}, ${k2s}, ${k3s}};
        ]]
    local cfg = ref_cfg "rfmultipole" {
        alist = tblcat(ref_cfg.alist, {"volt", "lag", "freq", "harmon", "k0", "k1", "k2", "k3", "k0s", "k1s", "k2s", "k3s"}),
        -- totalpath = {false, true}, !illegal in MAD-X
        volt      = -8 ..8  ..8   ,
        lag       =  0 ..0.9..0.45,
        freq      =  0 ..150 ..75,
        k0        = -0.2..0.2..0.2,
        k1        = -0.2..0.2..0.2,
        k2        = -0.2..0.2..0.2,
        k3        = -0.2..0.2..0.2,
        k0s       = -0.2..0.2..0.2,
        k1s       = -0.2..0.2..0.2,
        k2s       = -0.2..0.2..0.2,
        k3s       = -0.2..0.2..0.2,
        icase     = 6,
    }
    cfg = cfg {harmon := {cfg.cfg.freq == 0 and 2 or 0},}
    run_test(cfg)
end
