end

local function testSBENDfhs() -- knl required so MAD-NG and PTC use the same coefficients (MAD-NG has access to a few more coefficients that PTC ignores)
  local cfg = ref_cfg "sbendfhs" {
    elm =  [[
      SBEND, at=0.75, l=1.5, angle=${k0}*2*pi/1e2, k1=${k1}, k1s=${k1s},
      e1=${e1}*2*pi/2.2e2, e2=${e2}*2*pi/2.5e2, hgap=${hgap},
      kill_ent_fringe=${no_fringe}, kill_exi_fringe=${no_fringe}, 
      fringe=${fringe}, fint=${fint}, fintx=${fintx}, f1=${f1}, f2=${f2};
    ]],

    tol = 718,
    model  = {1, 2},
    method = {2},    
    nslice = {1},
    energy = {1},
    snm = 5, --max(damo+1, nmul+2) = 5
    fringe = \s-> s.cur_cfg.no_fringe and 0 or 7,
    
    alist = tblcat(
      ref_cfg.alist, 
      {"k0", "no_fringe", "e2", "e1", "hgap", "fint", "fintx", "k1s", "k1", "f1", "f2"}
    ), 
    k0        = {0.5},
    no_fringe = {true, false},
    e1        = {-0.3, 0, 0.1},
    e2        = \s-> s.e1,
    hgap      = {0, 0.05},
    fint      = {0, 0.7},
    fintx     = \s-> s.fint,
    k1        = {0, -0.15, 0.2},
    k1s       = \s-> s.k1,
    f1        = {0, 0.8},
    f2        = {0, 0.75},

    plot_info = {
      x_axis_attr = "${e1}",
      title       = "SBend Fringe Comparison (e1, e2, hgap, fint, fintx, k1, k1s)",
      series      = {
        "${e2} == -0.3",
        "${e2} == 0",
        "${e2} == 0.1",
      },
      legend = {
        y1 = "e2 = -0.3 * angle",
        y2 = "e2 = 0",
        y3 = "e2 = 0.1 * angle",
      },
      xlabel      = "e1 / angle",
      xlabel      = "k1",
      xrange      = {-0.35, 0.15},
      filename    = "sbend-fringe-CFM-comparison.png",
    }
  }
  run_test(cfg)
end

